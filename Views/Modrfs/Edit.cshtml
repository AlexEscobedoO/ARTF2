@model ARTF2.Models.Modrf

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Editar Modificación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idmod" />
            <div class="form-group">
                <label asp-for="NumacuofsolNavigator" class="control-label"></label>
                <select asp-for="NumacuofsolNavigator" class="form-control" asp-items="ViewBag.NumacuofsolNavigator"></select>
                <span asp-validation-for="NumacuofsolNavigator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameAcuDoc" class="control-label"></label>
                <input asp-for="NameAcuDoc" class="form-control" />
                <span asp-validation-for="NameAcuDoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acumod" class="control-label"></label>
                <input asp-for="Acumod" class="form-control" />
                <span asp-validation-for="Acumod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fechamod" class="control-label"></label>
                <input asp-for="Fechamod" class="form-control" />
                <span asp-validation-for="Fechamod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desmod" class="control-label"></label>
                <textarea asp-for="Desmod" class="form-control" rows="5" maxlength="200"></textarea>
                <span asp-validation-for="Desmod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obsmod" class="control-label"></label>
                <textarea asp-for="Obsmod" class="form-control" rows="5" maxlength="200"></textarea>
                <span asp-validation-for="Obsmod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameFichaTecDoc" class="control-label"></label>
                <input asp-for="NameFichaTecDoc" class="form-control" />
                <span asp-validation-for="NameFichaTecDoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fichatecmod" class="control-label"></label>
                <input asp-for="Fichatecmod" class="form-control" />
                <span asp-validation-for="Fichatecmod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clavemod" class="control-label"></label>
                <input asp-for="Clavemod" class="form-control" />
                <span asp-validation-for="Clavemod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.NumacuofsolNavigator" class="btn btn-info">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
